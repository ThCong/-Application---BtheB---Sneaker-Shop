<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FAQ"
    android:background="#F1F5F8"
    android:fillViewport="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        >

        <ImageView
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FAQ"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/darkblue"
            android:gravity="center"
            android:layout_marginLeft="-40dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi"
            android:textSize="28sp"
            android:textColor="@color/darkblue" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTB,"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="@color/darkblue"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="how can we help?"
        android:layout_marginLeft="20dp"
        android:textSize="25sp"
        android:textColor="@color/darkblue" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/corner_edittext_faq"
        android:backgroundTint="@color/white"
        android:hint="Search by keyword (e.g. voucher, cancellation...)"
        android:textSize="15sp"
        android:drawableRight="@drawable/search"
        android:paddingRight="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top questions"
        android:layout_marginLeft="20sp"
        android:textColor="@color/darkblue"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="18sp" />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/more_item"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Where is my order?"
                android:textSize="20dp"
                android:paddingTop="13dp"
                android:textColor="@color/darkblue"
                android:paddingLeft="20dp"
                />

        <ImageView
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:paddingTop="15dp"
            android:src="@drawable/arrow_small" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/more_item"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is your Return policy?"
                android:textSize="20dp"
                android:paddingTop="13dp"
                android:textColor="@color/darkblue"
                android:paddingLeft="20dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_small"
                android:paddingTop="15dp"
                android:layout_marginLeft="70dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/more_item"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How do I use my vouchers?"
                android:textSize="20dp"
                android:paddingTop="13dp"
                android:textColor="@color/darkblue"
                android:paddingLeft="20dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_small"
                android:paddingTop="15dp"
                android:layout_marginLeft="65dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topics"
            android:layout_marginLeft="20sp"
            android:textColor="@color/darkblue"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="18sp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Still Need "
            android:layout_marginLeft="20sp"
            android:textColor="@color/darkblue"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call us: 0123456789 anytime you need."
            android:layout_marginLeft="20sp"
            android:textColor="@color/darkblue"
            android:textSize="18sp" />
    </LinearLayout>

</ScrollView>