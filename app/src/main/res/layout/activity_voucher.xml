<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Voucher"
    android:background="@color/white2"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/bgr_top"
        android:padding="30dp">
        <ImageView
            android:id="@+id/imvBack_Voucher"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_white"/>

        <TextView
            android:id="@+id/txtvoucher_tittle"
            android:layout_width="109dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:text="VOUCHER"
            android:textColor="@color/white"
            android:textSize="24sp"
            />//TITLE

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sometimes it pays to be loyal"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="13sp"/>SUBTITLE
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="-120dp"
        >
        //Freeship
        <FrameLayout
            android:id="@+id/framefreeship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/freeship"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free ship"
                android:textColor="@color/darkblue"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="120dp"
                android:layout_marginRight="7dp"
                android:text="20.12"
                android:textColor="@color/darkblue"
                android:textSize="14dp" />
        </FrameLayout>
        //Refund
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            >

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/refund"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refund 10%"
                android:textColor="@color/darkblue"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20.12"
                android:textColor="@color/darkblue"
                android:textSize="14dp"
                android:layout_gravity="right"
                android:layout_marginTop="120dp"
                android:layout_marginRight="7dp"/>
        </FrameLayout>
    </LinearLayout>

    //BRANDVOUCHER
    <TextView
            android:id="@+id/txtbrandvoucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BRAND VOUCHER"
            android:textColor="@color/darkblue"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:textStyle="bold"/>
    <ListView
        android:id="@+id/lvVoucher"
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:paddingHorizontal="10dp"
        android:divider="@null"
        android:dividerHeight="10dp"/>
    </LinearLayout>
</ScrollView>