<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shaperecyclerview">

    <ImageView
        android:id="@+id/imvThumb"
        android:layout_width="284dp"
        android:layout_height="163dp"
        android:src="@drawable/shoes2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="COnverse"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginRight="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imvThumb" />

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$70"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/txtName"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:paddingBottom="10dp"/>

    <Button
        android:id="@+id/btnQuickBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="quick buy"
        android:textSize="18dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtPrice"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:background="@drawable/shaperecyclerview"
        />



</androidx.constraintlayout.widget.ConstraintLayout>