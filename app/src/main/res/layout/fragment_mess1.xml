<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white2"
android:orientation="vertical"
tools:context=".fragments.Mess1Fragment"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="25dp"
    >

    <ImageView
        android:id="@+id/imvBack"
        android:layout_width="26dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:src="@drawable/back" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Message"
        android:textSize="28sp"
        android:textColor="@color/darkblue"
        android:gravity="center"
        android:layout_marginLeft="-40dp"
        />
</LinearLayout>

<ImageView
    android:layout_width="234dp"
    android:layout_height="278dp"
    android:src="@drawable/mess1"
    android:layout_marginTop="50dp"
    android:layout_marginLeft="20dp"
    />
<TextView
    android:layout_width="300sp"
    android:layout_height="200sp"
    android:text="Autumn is officially here and with Winter incoming, it's time to upgrade your layer game. To keep you covered, we've got coats and jackets for the whole fam right here."
    android:layout_gravity="end"
    android:gravity="right"
    android:textSize="20sp"
    android:textColor="@color/darkblue"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp" />

<Button
    android:id="@+id/btnShopNowMess1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/darkblue"
    android:text="SHOP NOW"
    android:textColor="@color/white"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="140dp"
    android:shadowColor="#252222"
    />
</LinearLayout>