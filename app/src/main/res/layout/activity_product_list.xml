<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Product_List">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/darkblue"
        >
        <ImageView
            android:id="@+id/imvBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp"
            android:src="@drawable/back_white"/>

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/imvCart"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="13dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/cart" />

        <EditText
            android:id="@+id/edtSearch"
            android:drawableLeft="@drawable/search_32x32"
            android:hint="Search..."
            android:paddingLeft="10dp"
            android:focusableInTouchMode="false"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/bgr_white_20"
            />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/darkblue"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1008 Product"
            android:textSize="3mm"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"/>

        <ImageButton
            android:id="@+id/imgbtnGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:background="@android:color/transparent"
            android:src="@drawable/grid" />

        <ImageButton
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:background="@android:color/transparent"
            android:src="@drawable/filter"/>


    </LinearLayout>
    <androidx.fragment.app.FragmentContainerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragmentProduct"/>

</LinearLayout>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_full1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>