<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.home.HomeFragment"
    tools:ignore="SpeakableTextPresentCheck"
    android:background="@color/white2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1800dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/darkblue"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/logo" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="13dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/cart" />

            <SearchView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/button_white" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="FREE STANDARD DELIVERY"
                android:textSize="22sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/darkblue"
                />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_Pager"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/btnShopNow"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="-120dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/darkblue"
                android:text="SHOP NOW"
                android:textSize="22sp"
                app:cornerRadius="10dp" />
        </LinearLayout>//banner slider
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The JD Sports Hub has all your sports related needs covered! No matter what the sport, we have the kits, equipments, clothing and accessories you need to take your skills to the next level!"
            android:padding="20dp"
            android:textStyle="normal"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="25dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/fitness"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Fitness and Training"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:textColor="@color/darkblue"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="25dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/running"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Running"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:textColor="@color/darkblue"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="25dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/boxing"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Boxing"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:textColor="@color/darkblue"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/baseball"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Baseball"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:textColor="@color/darkblue"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>// 4 sports
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="25dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/swimming"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Swimming"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:textColor="@color/darkblue"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="25dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/soccer"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Soccer"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:textColor="@color/darkblue"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="25dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/football"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Football"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:textColor="@color/darkblue"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/basketball"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Basketball"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:textColor="@color/darkblue"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>// 4 sports
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="25dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/volleyball"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Volleyball"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:textColor="@color/darkblue"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="25dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/hiking"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Hiking"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:textColor="@color/darkblue"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="25dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/tennis"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Tennis"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:textColor="@color/darkblue"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/all"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Shop All"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:textColor="@color/darkblue"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>// 4 sports
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/btnOpenShop"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="-120dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/darkblue"
                android:text="SHOP NOW"
                android:textSize="22sp"
                app:cornerRadius="10dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

